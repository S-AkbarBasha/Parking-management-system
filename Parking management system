import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class SimpleParkingSystemMini {

    private static List<String> parkingSpots = new ArrayList<>();
    private static int capacity;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Enter parking lot capacity: ");
        capacity = scanner.nextInt();
        scanner.nextLine();

        for (int i = 0; i < capacity; i++) {
            parkingSpots.add("Free");
        }

        while (true) {
            System.out.println("\n1. Park Vehicle\n2. Remove Vehicle\n3. Exit");
            System.out.print("Choice: ");
            int choice = scanner.nextInt();
            scanner.nextLine();

            if (choice == 1) {
                parkVehicle(scanner);
            } else if (choice == 2) {
                removeVehicle(scanner);
            } else if (choice == 3) {
                System.out.println("Goodbye!");
                break;
            } else {
                System.out.println("Invalid choice.");
            }
        }
        scanner.close();
    }

    private static void parkVehicle(Scanner scanner) {
        System.out.print("Enter vehicle number: ");
        String vehicle = scanner.nextLine();
        for (int i = 0; i < capacity; i++) {
            if (parkingSpots.get(i).equals("Free")) {
                parkingSpots.set(i, vehicle);
                System.out.println("Parked at spot " + (i + 1));
                return;
            }
        }
        System.out.println("Parking Full.");
    }

    private static void removeVehicle(Scanner scanner) {
        System.out.print("Enter vehicle number to remove: ");
        String vehicle = scanner.nextLine();
        for (int i = 0; i < capacity; i++) {
            if (parkingSpots.get(i).equals(vehicle)) {
                parkingSpots.set(i, "Free");
                System.out.println("Vehicle removed from spot " + (i + 1));
                return;
            }
        }
        System.out.println("Vehicle not found.");
    }
}
